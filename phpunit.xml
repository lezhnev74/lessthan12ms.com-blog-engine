<?xml version="1.0" encoding="UTF-8"?>
<phpunit
	processIsolation="false"
	bootstrap="vendor/autoload.php"
	colors = "true"
	verbose="true"
	stopOnFailure="true"
	>
	<testsuites>
		<testsuite name="all">
			<directory>tests</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">./src</directory>
		</whitelist>
	</filter>
</phpunit>
